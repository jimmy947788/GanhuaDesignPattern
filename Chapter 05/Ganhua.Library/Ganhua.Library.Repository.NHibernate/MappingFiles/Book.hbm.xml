<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="Ganhua.Library.Model"
        assembly="Ganhua.Library.Model">

  <class name="Ganhua.Library.Model.Book" table="t_Copies" lazy="false">

    <id name="Id" column="Id" type="guid">
      <generator class="guid" />
    </id>

    <many-to-one name="Title"
                 class="BookTitle"
                 column="BookISBN"
                 not-null="true"
					  />
	 
	  <many-to-one name="OnLoanTo"				   
			       class="Member"
				  column="MemberId"/>

  </class>

</hibernate-mapping>